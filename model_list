#c_src cmodel/src    bbc_display_vnc inc:cmodel/inc
c_src cmodel/src     bbc_shm         inc:cmodel/inc

cdl cdl/src saa5050 inc:cdl/inc
cdl cdl/src cpu6502 inc:cdl/inc
cdl cdl/src via6522 inc:cdl/inc
cdl cdl/src crtc6845 inc:cdl/inc
cdl cdl/src acia6850 inc:cdl/inc
cdl cdl/src fdc8271 inc:cdl/inc
cdl cdl/src bbc_vidproc         inc:cdl/inc
cdl cdl/src bbc_micro_keyboard  inc:cdl/inc
